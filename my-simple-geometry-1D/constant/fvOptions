FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

options
{
    energySource
    {
        type            scalarSemiImplicitSource;

        duration        1000.; // much longer than the simulation 
        selectionMode   all;
        volumeMode      absolute; 

        injectionRateSuSp
        {
            T          (1 0); // K - only explicit contribution   
        }
    }
}
