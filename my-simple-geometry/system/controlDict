DebugSwitches 
{
    GAMG                0;
    GAMGAgglomeration   0;
    GAMGInterface       0;
    GAMGInterfaceField  0;
    GaussSeidel         0;
    fvScalarMatrix      0;
    lduMatrix           0;
    lduMesh             0;
}

application     laplacianFoam;

startTime       0;

stopAt          endTime;

endTime         3;

deltaT          0.005;

writeControl    runTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

