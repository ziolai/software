FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-12;
        relTol           1e-12;
    };

    U
    {
        solver           PBiCG;
        preconditioner   DILU;
        tolerance        1e-12;
        relTol           1e-12;
    };
}

SIMPLE
{
    nNonOrthogonalCorrectors 2; // 0; // to mitigate the non-orthogonality introduced by the boundart layer  
    consistent      yes;

    residualControl
    {
        p               1e-12;
        "(Ux|Uy)"       1e-12;
        Uz              1e-4; // less stringent on z-component 
    }
}

relaxationFactors
{
    fields
    {
        p               0.7; 
        U               0.7; 
        ".*"            0.7; 
    }
    equations
    {
        p               0.7; 
        U               0.7; 
        ".*"            0.7; 
    }
}

